{
    "manifest_version": 2,
    "name": "TeamDynamix Ticket Refresh",
    "version": "0.9.0",

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "page_action": {
        "default_icon":"icon/TDIcon_1919.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["https://rcgc.teamdynamix.com/TDNext/Home/Desktop/Default.aspx"],
      "js": ["tdtickets_cs.js"]
    }],
    "permissions":[
        "declarativeContent",
        "alarms",
        "storage",
        "https://rcgc.teamdynamix.com/*"
    ]
}